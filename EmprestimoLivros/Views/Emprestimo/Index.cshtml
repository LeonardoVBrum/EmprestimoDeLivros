@model IEnumerable< EmprestimosModel>


<div class="container">
    <div class="d-flex justify-content-between align-items-center m-5">
        <h1>Empréstimos</h1>
        <a class="btn btn btn-outline-success mx-2" asp-area="" asp-controller="Emprestimo" asp-action="Cadastrar"><i class="bi bi-clipboard2-plus"></i> Cadastrar novo emprestimo </a>
    </div>

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class=" alert-primary  text-light" role="alert">

            @TempData["MensagemSucesso"]
        </div>
        
    }

   


    <table id="Emprestimos" class="table table-light table-hover">
    <thead>
        <tr>
            <th scope="col">Recebedor</th>
            <th scope="col">Fornecedor</th>
            <th scope="col">Livro</th>
            <th scope="col">última atualização</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        @if(Model != null)
        {       
            @foreach (var emprestimo in Model)
            {
                <tr>
                    <th scope="row">@emprestimo.Recebedor</th> 
                    <td>@emprestimo.Fornecedor</td>
                    <td>@emprestimo.LivroEmprestado</td>
                    <td>@emprestimo.DataUltimaAtualizacao</td>
                    <td>
                            <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn btn-outline-primary mx-2"><i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn btn-outline-danger mx-2"><i class="bi bi-trash3"></i> Excluir</a>
                        </td>
                </tr>
                
            }

            
        }
        
        
    </tbody>
</table>
</div>